new TypeIt("#wzhlyn", {
    loop: true,
    cursorSpeed: 1000,
    speed: 100
})
    .type("异想少女 && 异想之旅")
    .pause(2000)
    .delete(null, {
        delay: 500
    })
    .type("这是我们的第一个情人节")
    .pause(3000)
    .delete(null, {
        delay: 500
    })
    .type("可惜今天我们没法见面")
    .pause(3000)
    .delete(null, {
        delay: 500
    })
    .type("那就先送给你们这个小网站吧")
    .pause(3000)
    .go();

